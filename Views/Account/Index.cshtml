<h2>Account</h2>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <p>Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-danger" value="Log out" />
  }
}
else
{
  <a href="/Account/Register"><button type="button" class="btn btn-primary">Register</button></a>
  <a href="Account/Login"><button type="button" class="btn btn-warning">Log in</button></a>
}

