@model TreatsTracker.Models.Treat

<h2>Add a Flavor</h2>

@if (ViewBag.FlavorCount == 0)
{
  <h4>You have not added any flavors yet! Please add them <span>@Html.ActionLink("here", "Index", "Flavors")</span>
</h4>
}
else
{
  <h4>Assign a flavor to this treat: @Html.DisplayFor(model => model.Name)</h4>
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.TreatId)

    @Html.Label("Select flavor")
    @Html.DropDownList("FlavorId")

    <input type="submit" value="Save" />
  }
}
<p>@Html.ActionLink("Back to list", "Index")</p>